GET     /                           controllers.ProductController.index

POST    /addproduct                 controllers.ProductController.addProduct
GET     /products                   controllers.ProductController.getProducts
GET     /categories                 controllers.ProductController.getCategories

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /users/welcome/:name/:surname                  controllers.UsersController.welcome(name: String, surname: String)

GET     /users/get/:id              controllers.UsersController.getUser(id: Int)

GET     /users/getAll               controllers.UsersController.getAllUsers

POST    /users/login                controllers.UsersController.login